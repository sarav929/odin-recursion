# without recursion

def fib(n)
    return [] if n <= 0
    return [0] if n == 1
    return [0, 1] if n == 2
    sequence = [0, 1]
    while sequence.length < n
      sequence << sequence[-1] + sequence[-2]
    end
    sequence
end

puts fib(6)

# with recursion

def fib_rec(n, sequence = [0,1])
    return [] if n <= 0
    return [0] if n == 1
    return sequence[0...n] if sequence.length >= n

    sequence << sequence[-1] + sequence[-2]
    fib_rec(n, sequence)
end

puts fib_rec(6)
  